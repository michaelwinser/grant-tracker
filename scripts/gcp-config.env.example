# Google Cloud Project Configuration
# Copy this file to gcp-config.env and fill in your values
# Do NOT commit gcp-config.env to version control

# Project settings
GCP_PROJECT_ID="grant-tracker-prod"       # Must be globally unique, lowercase, hyphens only
GCP_PROJECT_NAME="Grant Tracker"          # Human-readable name

# OAuth settings
OAUTH_APP_NAME="Grant Tracker"            # Shown on consent screen

# GitHub Pages URL (your production deployment)
# Format: https://USERNAME.github.io/REPO or https://custom-domain.com
GITHUB_PAGES_URL="https://your-org.github.io/grant-tracker"

# Optional: Support email shown on consent screen
SUPPORT_EMAIL=""

# Optional: Additional authorized origins (comma-separated)
# EXTRA_ORIGINS="https://staging.example.com,https://preview.example.com"
