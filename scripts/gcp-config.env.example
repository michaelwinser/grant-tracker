# Google Cloud Project Configuration
# Copy this file to gcp-config.env and fill in your values
# Do NOT commit gcp-config.env to version control

# Project settings
GCP_PROJECT_ID="grant-tracker-prod"       # Must be globally unique, lowercase, hyphens only
GCP_REGION="us-central1"                  # Cloud Run region

# OAuth credentials (from GCP Console → APIs & Services → Credentials)
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-client-secret"

# Service name (used for Cloud Run service and image name)
SERVICE_NAME="grant-tracker"
